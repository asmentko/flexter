<div class="booyah-box col-xs-10 col-xs-offset-1">
  <%= simple_form_for @section, url: instructor_section_path(@section) do |f| %>
    <%= f.input :title %>

    <%= f.submit "Update", class: 'btn btn-default btn-sm' %>

  <!-- begin additions for delete functionality to lessons -->
    <div class="pull-right">
      <%= link_to 'Delete Section', instructor_section_path(@section), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger btn-sm' %>
    </div>
  <!-- end additions for deleting functionality to lessons -->
  <% end %>
</div>